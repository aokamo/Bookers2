<body>
<%= notice %>
<div class = "container">
        <div class="row">
          <div class="col-md-3">
            <h2>User info</h2>
            <table class="table table-striped">
                <tr>
                  <th><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100", fallback:"no_image.jpg" %></th>
                </tr>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                  </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </table>
            <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
            <h2>New book</h2>
            <%= form_with model: @book, local: true do |form| %>
              <% if @book.errors.any? %>
                <%= @book.errors.count %>errors prohibited this book from being saved
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
              <% end %>
              <div class="field">
                <p><%= form.label :title %></p>
                <p><%= form.text_field :title %></p>
              </div>
              <div class="field">
                <p><%= form.label :opinion %></p>
                <p><%= form.text_area :body %></p>
              </div>
              <div class="actions">
                <%= form.submit %>
              </div>
            <% end %>
         </div>
        <div class="col-md-8 offset-md-1">
          <h1>Books</h1>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th></th>
                  <th>title</th>
                  <th>opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @books.each do |book| %>
                  <tr>
                    <td>
                      <%= link_to user_path(@user) do %>
                      <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "40x40", fallback:"no_image.jpg" %>
                      <% end %>
                      </td>
                    <td><%=link_to book.title, book_path(book) %></td>
                    <td><%= book.body %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>
        </div>
      </div>
    </div>
</body>