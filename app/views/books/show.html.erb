  <body>
    <%= notice %>
    <div class = "container">
        <div class="row">
          <div class="col-lg-4">
            <h2>User info</h2>
            <table class="table table-striped">
                <tr>
                  <th><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100", fallback:"no_image.jpg" %></th>
                </tr>
                <tr>
                  <th>name</th>
                  <th><%= current_user.name %></th>
                  </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= current_user.introduction %></th>
                </tr>
              </table>
            <%= link_to 'edit', edit_user_path(@user), class: "btn btn-outline-secondary btn-lg btn-block" %>
            <h2>New book</h2>
            <%= form_with model: @book, local: true do |form| %>
              <% if @book.errors.any? %>
                <%= @book.errors.count %>errors prohibited this book from being saved
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
              <% end %>
              <div class="field">
                <p><%= form.label :title %></p>
                <p><%= form.text_field :title %></p>
              </div>
              <div class="field">
                <p><%= form.label :opinion %></p>
                <p><%= form.text_area :opinion %></p>
              </div>
              <div class="actions">
                <%= form.submit %>
              </div>
            <% end %>
         </div>
            <div class="col-lg-8">

              <h1>Book detail</h1>
              <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>image</th>
                      <th>name</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @books.each do |book| %>
                      <tr>
                        <td><%= book.title %></td>
                        <td><%= book.opinion %></td>
                        <td><%= link_to 'edit', edit_book_path(book), class: "btn btn-sm btn-success" %></td>
                        <td><%= link_to 'destroy', book_path, method: :delete, data: { confirm: '本当に消しますか ?' }, class: "btn btn-sm btn-danger" %></td>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
            </div>
     </div>
    </div>
  </body>
